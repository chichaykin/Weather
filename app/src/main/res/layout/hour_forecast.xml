<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/gray"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/week_text"
            style="@style/AttributionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Today" />


        <LinearLayout
            android:id="@+id/left_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/week_text"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/time"
                style="@style/AttributionText2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                tools:text="06:00" />

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                tools:ignore="RtlHardcoded"
                tools:src="@drawable/sun" />

        </LinearLayout>


        <TextView
            android:id="@+id/temperature"
            style="@style/AttributionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/left_part"
            android:textStyle="bold"
            tools:text="35°C" />

        <TextView
            android:id="@+id/description"
            style="@style/AttributionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/temperature"
            android:textStyle="italic"
            tools:text="Clear sky"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/more_info"
            style="@style/AttributionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperature"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/left_part"
            tools:text="-7.7 -7.7°C, 2.91m/s. 0%, 1015.94 hpa"
            tools:visibility="visible" />


    </RelativeLayout>


</android.support.v7.widget.CardView>